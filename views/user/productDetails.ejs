<script>
    document.addEventListener('DOMContentLoaded', function() {
        
        function initImageZoom() {
            const productImages = document.querySelectorAll('.main-image img');
            
            productImages.forEach(img => {
               
                const zoomContainer = document.createElement('div');
                zoomContainer.className = 'img-zoom-container';
                
              
                img.parentNode.insertBefore(zoomContainer, img);
                zoomContainer.appendChild(img);
                
              
                zoomContainer.addEventListener('mousemove', function(e) {
                    const bounds = this.getBoundingClientRect();
                    const x = e.clientX - bounds.left;
                    const y = e.clientY - bounds.top;
                    
                    
                    const xPercent = Math.round(x / bounds.width * 100);
                    const yPercent = Math.round(y / bounds.height * 100);
                    
                    
                    img.style.transformOrigin = `${xPercent}% ${yPercent}%`;
                });
                
                
                zoomContainer.addEventListener('mouseenter', function() {
                    img.classList.add('img-zoom-active');
                });
                
                zoomContainer.addEventListener('mouseleave', function() {
                    img.classList.remove('img-zoom-active');
                });
            });
            
            
            document.querySelectorAll('.thumbnail img').forEach(thumbnail => {
                thumbnail.addEventListener('click', function() {
                    const mainImage = document.querySelector('.main-image img');
                    mainImage.src = this.src;
                    
                    
                    document.querySelectorAll('.thumbnail img').forEach(img => {
                        img.classList.remove('selected-thumbnail');
                    });
                    this.classList.add('selected-thumbnail');
                });
            });
            
            
            if (document.querySelector('.thumbnail img')) {
                document.querySelector('.thumbnail img').classList.add('selected-thumbnail');
            }
        }
        
        
        initImageZoom();
        
        
        const qtyUp = document.querySelector('.qty-up');
        const qtyDown = document.querySelector('.qty-down');
        const qtyVal = document.querySelector('.qty-val');
        
        if (qtyUp && qtyDown && qtyVal) {
            qtyUp.addEventListener('click', function(e) {
                e.preventDefault();
                let value = parseInt(qtyVal.textContent);
                qtyVal.textContent = value + 1;
            });
            
            qtyDown.addEventListener('click', function(e) {
                e.preventDefault();
                let value = parseInt(qtyVal.textContent);
                if (value > 1) qtyVal.textContent = value - 1;
            });
        }
    });
</script>

