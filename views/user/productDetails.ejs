<%-include("../../views/partials/user/header")%>
<main class="main">
    <div class="page-header breadcrumb-wrap bg-light py-3 mb-4">
        <div class="container">
            <nav class="breadcrumb" aria-label="Breadcrumb">
                <a href="/" class="breadcrumb-item">Home</a>
                <span class="breadcrumb-separator" aria-hidden="true">/</span>
                <a href="/loadShoppingPage" class="breadcrumb-item">Shop</a>
                <span class="breadcrumb-separator" aria-hidden="true">/</span>
                <span class="breadcrumb-item active" aria-current="page">Product Detail</span>
            </nav>
        </div>
    </div>

    <section class="product-detail-section py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-9 mx-auto">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4">
                            <!-- Product Images and Details -->
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="product-gallery position-relative">
                                        <span class="zoom-icon position-absolute top-0 end-0 m-3 bg-white rounded-circle p-2 shadow-sm">
                                            <i class="fi-rs-search"></i>
                                        </span>
                                        <div class="main-image mb-3">
                                            <% for(let i = 0; i < product.productImage.length && i < 1; i++) { %>
                                                <img src="<%= product.productImage[i] %>" alt="<%= product.productName %>" 
                                                    class="w-100 rounded object-fit-contain" style="max-height: 400px;">
                                            <% } %>
                                        </div>
                                        <div class="thumbnail-slider d-flex gap-2 overflow-auto pb-2">
                                            <% for(let i = 0; i < product.productImage.length; i++) { %>
                                                <div class="thumbnail flex-shrink-0">
                                                    <img src="<%= product.productImage[i] %>" 
                                                        alt="<%= product.productName %>"
                                                        class="rounded cursor-pointer border hover-border-primary"
                                                        style="width: 80px; height: 80px; object-fit: contain;">
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>

                                <!-- Product Details -->
                                <div class="col-md-6">
                                    <div class="product-info">
                                        <h1 class="product-title mb-2 fs-3"><%= product.productName %></h1>
                                        <div class="rating-reviews d-flex align-items-center mb-3">
                                            <div class="product-rating me-2" style="width: 90%;">
                                                <span class="stars">★★★★☆</span>
                                            </div>
                                        </div>

                                        <div class="pricing mb-4">
                                            <span class="current-price text-primary fw-bold fs-4">
                                                <span class="meta-label">Price:</span> 
                                                <span class="meta-value"><%= product.salesPrice %></span>
                                            </span>
                                            <span class="old-price text-muted text-decoration-line-through ms-3">
                                                <span class="meta-label">Old Price:</span> 
                                                <span class="meta-value"><%= product.regularPrice %></span>
                                            </span>
                                            <% if(totalOffer) { %>
                                                <span class="discount badge bg-success ms-3">
                                                    <span class="meta-label">Discount:</span> 
                                                    <span class="meta-value"><%= totalOffer %>% OFF</span>
                                                </span>
                                            <% } %>
                                        </div>

                                        <div class="description text-muted mb-4">
                                            <p><%= product.description %></p>
                                        </div>

                                        <div class="actions d-flex align-items-center gap-3 mb-4">
                                            <div class="quantity-selector d-flex align-items-center border rounded">
                                                <a href="#" class="qty-down px-3 py-2"><i class="fi-rs-angle-small-down"></i></a>
                                                <span class="qty-val px-3" id="quantity">1</span>
                                                <a href="#" class="qty-up px-3 py-2"><i class="fi-rs-angle-small-up"></i></a>
                                            </div>
                                            <button type="submit" class="btn btn-primary btn-add-to-cart flex-grow-1" <%= product.status === 'out of stock' ? 'disabled' : '' %>>
                                                <%= product.status === 'out of stock' ? 'Out of Stock' : 'Add to Cart' %>
                                            </button>
                                            <a href="#" class="btn btn-outline-secondary wishlist-btn">
                                                <i class="fi-rs-heart"></i>
                                            </a>
                                        </div>

                                        <ul class="product-meta small text-muted">
                                            <li class="mb-2">
                                                <span class="meta-label">Category:</span> 
                                                <span class="meta-value"><a href="#"><%= category.name %></a></span>
                                            </li>
                                            <li>
                                                <span class="meta-label">Availability:</span> 
                                                <% if (product.quantity>0 ) { %>
                                                    <span class="meta-value text-success fw-medium"><%= product.quantity %> Items in stock</span>
                                                <% } else { %>
                                                    <span class="meta-value out-of-stock">Out of Stock</span>
                                                <% } %>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            
                            <div class="reviews-section mt-4">
                                <h3 class="fs-4 mb-3">Customer Reviews</h3>
                                <div class="reviews-list">
                                    
                                    <div class="review-item border-bottom py-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="stars text-warning me-2">★★★★☆</span>
                                            <span class="reviewer-name fw-medium">John Doe</span>
                                            <span class="review-date text-muted ms-auto">March 25, 2025</span>
                                        </div>
                                        <p class="review-text mb-0">"Great product! The quality is amazing, though delivery took a bit longer than expected."</p>
                                    </div>
                                    
                                    <div class="review-item border-bottom py-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="stars text-warning me-2">★★★★★</span>
                                            <span class="reviewer-name fw-medium">Jane Smith</span>
                                            <span class="review-date text-muted ms-auto">March 20, 2025</span>
                                        </div>
                                        <p class="review-text mb-0">"Absolutely love it! Worth every penny."</p>
                                    </div>
                                    
                                    <div class="review-item py-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="stars text-warning me-2">★★★☆☆</span>
                                            <span class="reviewer-name fw-medium">Alex Brown</span>
                                            <span class="review-date text-muted ms-auto">March 15, 2025</span>
                                        </div>
                                        <p class="review-text mb-0">"Decent product, but the packaging could be improved."</p>
                                    </div>
                                </div>
                                <a href="#" class="btn btn-outline-primary mt-3">See All Reviews</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
