<style>
  
  .our-story-section {
    background: #ffffff; 
    position: relative;
    overflow: hidden;
  }

  .our-story-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('/images/book-pattern.png') repeat;
    opacity: 0.05;
    z-index: 0;
  }

  .our-story-section h1 {
    font-family: 'Playfair Display', serif;
    color: #0a0a0a;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    animation: fadeInDown 1s ease-out;
  }

  .our-story-section p {
    font-family: 'Nunito', sans-serif;
    color: #000000;
    font-size: 1.1rem;
    transition: transform 0.3s ease;
  }

  .our-story-section p:hover {
    transform: translateY(-3px);
  }

  .books-image img {
    transition: transform 0.5s ease, box-shadow 0.3s ease;
  }

  .books-image img:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .statistics-section {
    background: #f8f9fa; /* Reverted to original solid background */
  }

  .stat-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #e0e0e0;
    background: linear-gradient(145deg, #ffffff, #f0f0f0); /* Kept subtle card gradient */
  }

  .stat-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
  }

  .stat-icon {
    background: linear-gradient(45deg, #2c3e50, #4a5a6b) !important; /* Changed to neutral gray gradient */
    transition: transform 0.3s ease;
  }

  .stat-card:hover .stat-icon {
    transform: rotate(360deg);
  }

  .stat-card h3 {
    font-family: 'Montserrat', sans-serif;
    color: #2c3e50;
  }

  .stat-card p {
    font-family: 'Nunito', sans-serif;
