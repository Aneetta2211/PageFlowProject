   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
<script>
    function toggleDateInputs() {
        const filterType = document.getElementById('filterType').value;
        const startDateDiv = document.getElementById('customDateRange');
        const endDateDiv = document.getElementById('customDateRangeEnd');
        if (filterType === 'custom') {
            startDateDiv.classList.remove('d-none');
            endDateDiv.classList.remove('d-none');
        } else {
            startDateDiv.classList.add('d-none');
            endDateDiv.classList.add('d-none');
        }
    }

    function clearFilters() {
        const form = document.getElementById('salesFilterForm');
        const filterType = document.getElementById('filterType');
        const startDate = document.getElementById('startDate');
        const endDate = document.getElementById('endDate');

        filterType.value = 'daily';
        startDate.value = '';
        endDate.value = '';

        document.getElementById('customDateRange').classList.add('d-none');
        document.getElementById('customDateRangeEnd').classList.add('d-none');

        form.submit();
    }

    document.querySelectorAll('.btn').forEach(btn => {
        btn.addEventListener('click', function () {
            if (this.type === 'submit') {
                this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Loading...';
            }
        });
    });

    // Revenue & Orders Chart
    <% if (chartData) { %>
        const revenueOrdersCtx = document.getElementById('revenueOrdersChart').getContext('2d');
        try {
            console.log('Initializing Revenue & Orders Chart with data:', <%- JSON.stringify(chartData) %>);
            new Chart(revenueOrdersCtx, {
                type: 'line',
                data: {
                    labels: <%- JSON.stringify(chartData.labels) %>,
                    datasets: [
                        {
                            label: 'Revenue (₹)',
                            data: <%- JSON.stringify(chartData.revenue) %>,
                            backgroundColor: 'rgba(59, 130, 246, 0.2)',
                            borderColor: '#3b82f6',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4,
                            yAxisID: 'y'
                        },
                        {
                            label: 'Orders',
                            data: <%- JSON.stringify(chartData.ordersCount) %>,
                            backgroundColor: 'rgba(239, 68, 68, 0.2)',
                            borderColor: '#ef4444',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4,
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'rgba(255, 255, 255, 0.8)'
                            }
                        },
                        y: {
                            position: 'left',
                            title: {
                                display: true,
                                text: 'Revenue (₹)',
                                color: 'rgba(255, 255, 255, 0.8)'
                            },
                            grid: {
                                color: 'rgba(255, 255, 255, 0.1)'
                            },
                            ticks: {
                                color: 'rgba(255, 255, 255, 0.8)'
                            }
                        },
                        y1: {
                            position: 'right',
                            title: {
                                display: true,
                                text: 'Orders',
                                color: 'rgba(255, 255, 255, 0.8)'
                            },
                            grid: {
                                drawOnChartArea: false
                            },
                            ticks: {
                                color: 'rgba(255, 255, 255, 0.8)'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        } catch (error) {
            console.error('Error initializing Revenue & Orders Chart:', error);
        }
    <% } %>

    // Top Products Chart
    <% if (topProducts && topProducts.length > 0) { %>
        const topProductsCtx = document.getElementById('topProductsChart').getContext('2d');
        try {
            console.log('Initializing Top Products Chart with data:', <%- JSON.stringify(topProducts) %>);
            // Ensure canvas has explicit size
            topProductsCtx.canvas.height = 250;
            topProductsCtx.canvas.width = 250;
            new Chart(topProductsCtx, {
                type: 'doughnut',
                data: {
                    labels: <%- JSON.stringify(topProducts.map(p => p.name)) %>,
                    datasets: [{
                        data: <%- JSON.stringify(topProducts.map(p => p.totalSold)) %>,
                        backgroundColor: ['#ef4444', '#3b82f6', '#f59e0b', '#10b981'],
                        borderWidth: 1,
                        borderColor: 'rgba(255, 255, 255, 0.2)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.label}: ${context.raw} units`;
                                }
                            }
                        }
                    },
                    layout: {
                        padding: 10
                    }
                }
            });
        } catch (error) {
            console.error('Error initializing Top Products Chart:', error);
        }
    <% } %>

    // Top Categories Chart
    <% if (topCategories && topCategories.length > 0) { %>
        const topCategoriesCtx = document.getElementById('topCategoriesChart').getContext('2d');
        try {
            console.log('Initializing Top Categories Chart with data:', <%- JSON.stringify(topCategories) %>);
            // Ensure canvas has explicit size
            topCategoriesCtx.canvas.height = 250;
            topCategoriesCtx.canvas.width = 250;
            new Chart(topCategoriesCtx, {
                type: 'doughnut',
                data: {
                    labels: <%- JSON.stringify(topCategories.map(c => c.name)) %>,
                    datasets: [{
                        data: <%- JSON.stringify(topCategories.map(c => c.totalSold)) %>,
                        backgroundColor: ['#ef4444', '#3b82f6', '#f59e0b', '#10b981'],
                        borderWidth: 1,
                        borderColor: 'rgba(255, 255, 255, 0.2)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.label}: ${context.raw} units`;
                                }
                            }
                        }
                    },
                    layout: {
                        padding: 10
                    }
                }
            });
        } catch (error) {
            console.error('Error initializing Top Categories Chart:', error);
        }
    <% } %>
</script>
</body>

</html>