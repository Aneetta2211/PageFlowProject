<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .main-wrapper {
            display: flex;
            flex-grow: 1;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
        }

        .sidebar h2 {
            margin: 0;
            padding: 20px 10px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar ul li {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar ul li a {
            padding: 15px 20px;
            display: block;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: all 0.3s;
        }

        .sidebar ul li a:hover,
        .sidebar ul li a.active {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

        .sidebar ul li a i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }

        .content-area {
            flex-grow: 1;
            margin-left: 250px;
            display: flex;
            flex-direction: column;
        }

        .custom-navbar {
            background-color: #fff;
        }

        .container {
            padding: 20px;
            flex-grow: 1;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .customer-card {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 15px;
            background-color: #fff;
        }

        .btn {
            display: inline-block;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 4px;
            border: none;
            cursor: pointer;
        }

        .search-box {
            padding: 10px;
            margin-bottom: 20px;
            width: 100%;
            box-sizing: border-box;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .pagination {
            display: flex;
            justify-content: center;
            margin: 20px 0;
            flex-wrap: wrap;
            /* Ensures pagination wraps on smaller screens */
            gap: 5px;
            /* Adds spacing between pagination items */
        }

        .pagination a,
        .pagination span {
            color: black;
            padding: 8px 16px;
            text-decoration: none;
            border: 1px solid #ddd;
            border-radius: 4px;
            /* Rounded corners for better aesthetics */
            transition: background-color 0.3s;
        }

        .pagination a.active {
            background-color: #4CAF50;
            color: white;
            border: 1px solid #4CAF50;
        }

        .pagination a:hover:not(.active) {
            background-color: #ddd;
        }

        .pagination .disabled {
            color: #6c757d;
            pointer-events: none;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
        }

        .btn-smaller {
            height: 40px;
            padding-top: 0.15rem;
            padding-bottom: 0.15rem;
            font-size: 0.8rem;
        }
    </style>
</head>

<body>
    <div class="main-wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <h2 class="text-center p-3">Admin</h2>
            <ul>
                <li><a href="/admin"><i class="fa fa-tachometer-alt"></i> Dashboard</a></li>
                <li><a href="/admin/customers" class="active"><i class="fa fa-users"></i> Customers</a></li>
                <li><a href="/admin/category"><i class="fa fa-th-large"></i> Category</a></li>
                <li><a href="/admin/add-product"><i class="fa fa-plus"></i> Add Products</a></li>
                <li><a href="/admin/products"><i class="fa fa-box"></i> Products</a></li>
                <li><a href="/admin/coupons"><i class="fa fa-tag"></i> Coupons</a></li>
                <li><a href="/admin/banners"><i class="fa fa-image"></i> Banners</a></li>
                <li><a href="/admin/orders"><i class="fa fa-shopping-cart"></i> Orders</a></li>
            </ul>
        </div>

        <!-- Content Area -->
        <div class="content-area">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg custom-navbar shadow-sm">
                <div class="container-fluid">
                    <span class="navbar-brand">Customer Management</span>
                    <div>
                        <a href="/admin/logout" class="btn btn-danger">Logout</a>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container">
                <!-- Search Box -->
                <form action="/admin/customers" method="GET" class="d-flex align-items-center">
                    <input type="text" name="search" class="form-control search-box me-2"
                        placeholder="Search customers..." value="<%= search || '' %>">
                    <button type="submit" class="btn btn-primary btn-sm px-3 btn-smaller">üîç Search</button>
                    <a href="/admin/customers" class="btn btn-secondary btn-sm ms-1 px-3 btn-smaller">‚ùå Clear</a>
                </form>

                <!-- Customers Table -->
                <% if (customers && customers.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% 
                                const itemsPerPage = 10; // Set to 10 customers per page
                                const currentPageNum = parseInt(currentPage) || 1; // Ensure currentPage is a number
                                const startIndex = (currentPageNum - 1) * itemsPerPage;
                                const endIndex = Math.min(startIndex + itemsPerPage, customers.length);
                                const paginatedCustomers = customers.slice(startIndex, endIndex);
                                
                                paginatedCustomers.forEach(function(customer) { %>
                                    <tr id="customer-row-<%= customer._id %>">
                                        <td><%= customer._id %></td>
                                        <td><%= customer.name %></td>
                                        <td><%= customer.email %></td>
                                        <td><%= customer.mobile || 'N/A' %></td>
                                        <td id="status-<%= customer._id %>">
                                            <% if(customer.isBlocked) { %>
                                                <span class="badge bg-danger">Blocked</span>
                                            <% } else { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } %>
                                        </td>
                                        <td id="action-<%= customer._id %>">
                                            <% if(customer.isBlocked) { %>
                                                <a href="/admin/users/unblock/<%= customer._id %>"
                                                    class="btn btn-sm btn-success"
                                                    onclick="return updateStatus(this, '<%= customer._id %>', false);">Unblock</a>
                                            <% } else { %>
                                                <a href="/admin/users/block/<%= customer._id %>"
                                                    class="btn btn-sm btn-danger"
                                                    onclick="return updateStatus(this, '<%= customer._id %>', true);">Block</a>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <%
                    const totalItems = customers.length;
                    const totalPages = Math.ceil(totalItems / itemsPerPage);
                    if (totalPages > 1) {
                    %>
                        <div class="pagination">
                            <% if (currentPageNum > 1) { %>
                                <a href="?page=<%= currentPageNum - 1 %>&search=<%= search %>">¬´ Previous</a>
                            <% } else { %>
                                <span class="disabled">¬´ Previous</span>
                            <% } %>

                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <a href="?page=<%= i %>&search=<%= search %>"
                                   class="<%= i === currentPageNum ? 'active' : '' %>">
                                    <%= i %>
                                </a>
                            <% } %>

                            <% if (currentPageNum < totalPages) { %>
                                <a href="?page=<%= currentPageNum + 1 %>&search=<%= search %>">Next ¬ª</a>
                            <% } else { %>
                                <span class="disabled">Next ¬ª</span>
                            <% } %>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="alert alert-info" role="alert">
                        No customers found.
                    </div>
                <% } %>
            </div>
        </div>
    </div>


    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
    <script>
        function updateStatus(linkElement, customerId, isBlock) {
            const actionText = isBlock ? 'block' : 'unblock';

            Swal.fire({
                title: `Are you sure?`,
                text: `This will ${actionText} the customer!`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: `Yes, ${actionText} them!`,
                cancelButtonText: 'No, cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    const url = isBlock ? `/admin/users/block/${customerId}` : `/admin/users/unblock/${customerId}`;

                    fetch(url, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                const statusCell = document.getElementById(`status-${customerId}`);
                                const actionCell = document.getElementById(`action-${customerId}`);

                                if (isBlock) {
                                    statusCell.innerHTML = '<span class="badge bg-danger">Blocked</span>';
                                    actionCell.innerHTML = `<a href="#" class="btn btn-sm btn-success" onclick="return updateStatus(this, '${customerId}', false);">Unblock</a>`;
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Success',
                                        text: 'Customer blocked successfully!',
                                        confirmButtonText: 'OK'
                                    });
                                } else {
                                    statusCell.innerHTML = '<span class="badge bg-success">Active</span>';
                                    actionCell.innerHTML = `<a href="#" class="btn btn-sm btn-danger" onclick="return updateStatus(this, '${customerId}', true);">Block</a>`;
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Success',
                                        text: 'Customer unblocked successfully!',
                                        confirmButtonText: 'OK'
                                    });
                                }
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'Failed to update status. Please try again.',
                                    confirmButtonText: 'OK'
                                });
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'Failed to update status. Please try again.',
                                confirmButtonText: 'OK'
                            });
                        });
                }
            });

            return false;
        }
    </script>
</body>

</html>